# AI Service Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# PROJECT IP CONFIGURATION
# =============================================================================
# Set the IP address that containers should bind to
# For production server: 192.168.6.11
# For local development: 127.0.0.1 or 0.0.0.0
PROJECT_IP=192.168.6.11

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=production
DEBUG=false
WORKERS=4

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ES_HOST=elasticsearch
ES_PORT=9200
ES_SCHEME=http
ES_VERIFY_CERTS=false
ES_USERNAME=
ES_PASSWORD=
ES_HOSTS=elasticsearch:9200
ES_INDEX_PREFIX=sanctions
ES_STARTUP_TIMEOUT=60
SKIP_ES_INIT=false

# Elasticsearch indices
ES_AC_INDEX=sanctions_ac_patterns
ES_VECTOR_INDEX=sanctions_vectors

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
ENABLE_SEARCH=true
ENABLE_EMBEDDINGS=true
ENABLE_ES_FUZZY_SEARCH=true
ENABLE_VECTOR_FALLBACK=true
ENABLE_SEARCH_CACHE=true
SEARCH_CACHE_SIZE=2000
QUERY_CACHE_SIZE=5000

# Search thresholds
SEARCH_ESCALATION_THRESHOLD=0.6
VECTOR_SEARCH_THRESHOLD=0.3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ADMIN_API_KEY=
ENABLE_ELASTICSEARCH_AUTH=false

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
ENABLE_SEARCH_CACHE=true
SEARCH_CACHE_SIZE=2000
QUERY_CACHE_SIZE=5000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Uncomment for local development
# PROJECT_IP=127.0.0.1
# APP_ENV=development
# DEBUG=true
# WORKERS=1
